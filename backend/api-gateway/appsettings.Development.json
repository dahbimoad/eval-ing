{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/Auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/Auth/{**catch-all}"
          }
        ]
      },
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/Catalog/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/Catalog/{**catch-all}"
          }
        ]
      },
      "questionnaire-route": {
        "ClusterId": "questionnaire-cluster",
        "Match": {
          "Path": "/api/Questionnaire/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/Questionnaire/{**catch-all}"
          }
        ]
      },
      "statistics-route": {
        "ClusterId": "statistics-cluster",
        "Match": {
          "Path": "/api/Statistics/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/Statistics/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth": {
            "Address": "http://auth-service:8080/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "catalog-cluster": {
        "Destinations": {
          "catalog": {
            "Address": "http://catalog-service:8080/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "questionnaire-cluster": {
        "Destinations": {
          "questionnaire": {
            "Address": "http://questionnaire-service:8080/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "statistics-cluster": {
        "Destinations": {
          "statistics": {
            "Address": "http://statistics-service:8080/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  }
}